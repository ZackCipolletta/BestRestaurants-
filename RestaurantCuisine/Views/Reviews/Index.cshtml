@{
  Layout = "_Layout";
}

@using RestaurantCuisine.Models;

<h1>Restaurants</h1>

@if (@Model.Count == 0)
{
  <h3>No restaurants have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Review review in Model)
    {
      <li>@Html.ActionLink($"{review.Body}", "Details", new { id = review.ReviewId }) | @review.Restaurant.Name</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new restaurant", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>